{% extends "../layout.twig" %}

{% block title %}{{ title }} :: Twig.Notebook{% endblock %}

{% block body %}
	<nav>
		<a class="button" href="/notes">Back</a>
		<a class="button right" href="/edit/{{ id }}">Edit</a>
	</nav>
    <h2>{{ title }}</h2>
    <div class="note">
        <div class="text">
            {{ markdown }}
        </div>
    </div>
{% endblock %}